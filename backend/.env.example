# =============================================================================
# LLM Legal Advisory Council - Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=LLM Legal Advisory Council
APP_VERSION=0.1.0
DEBUG=false
ENVIRONMENT=development  # development, staging, production

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql+asyncpg://legal_user:legal_password@localhost:5432/legal_council
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# OPENROUTER (Recommended - Unified LLM Gateway)
# =============================================================================
# OpenRouter provides access to all LLM providers through a single API
# Get your API key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_SITE_URL=http://localhost:3000
OPENROUTER_APP_NAME=AI Legal Advisory Council

# Use OpenRouter for all LLM calls (recommended: true)
USE_OPENROUTER=true

# OpenRouter Model IDs (see https://openrouter.ai/models)
OPENROUTER_CHAIRMAN_MODEL=anthropic/claude-opus-4
OPENROUTER_COUNCIL_MODELS=openai/gpt-4o,anthropic/claude-sonnet-4,google/gemini-2.5-pro-preview,x-ai/grok-2
OPENROUTER_REVIEWER_MODEL=anthropic/claude-sonnet-4

# =============================================================================
# DIRECT LLM API KEYS (Only needed if USE_OPENROUTER=false)
# =============================================================================
# OpenAI (GPT-5.1)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic (Claude Opus 4.5, Claude Sonnet 4.5)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Google (Gemini 3 Pro, File Search)
GOOGLE_API_KEY=your-google-api-key
GOOGLE_PROJECT_ID=your-google-project-id
GOOGLE_LEGAL_CORPUS_NAME=legal-documents-corpus

# xAI (Grok 4)
XAI_API_KEY=your-xai-api-key

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# Chairman Model (Claude Opus 4.5)
CHAIRMAN_MODEL=claude-opus-4-5-20251101
CHAIRMAN_EFFORT=high

# Stage 1 Council Members
GPT_MODEL=gpt-5.1
GPT_REASONING_EFFORT=high

CLAUDE_SONNET_MODEL=claude-sonnet-4-5-20250929

GEMINI_MODEL=gemini-3-pro-preview
GEMINI_TEMPERATURE=1.0

GROK_MODEL=grok-4-1-fast-reasoning
GROK_USE_REASONING=true

# =============================================================================
# STORAGE (AWS S3)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=legal-council-documents

# =============================================================================
# EMAIL (SendGrid)
# =============================================================================
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@legalcouncil.ai
SUPPORT_EMAIL=support@legalcouncil.ai

# =============================================================================
# PAYMENT (Stripe)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_PRO_MONTHLY=price_your-pro-monthly-price-id
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_your-enterprise-monthly-price-id

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_BASIC_RPM=10
RATE_LIMIT_PRO_RPM=60
RATE_LIMIT_ENTERPRISE_RPM=200

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or console

# =============================================================================
# MONITORING (Optional)
# =============================================================================
SENTRY_DSN=
